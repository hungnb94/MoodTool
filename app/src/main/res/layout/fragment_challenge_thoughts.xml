<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.information.guide.cognitive_therapy.ChallengeThoughtsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llChallengeThoughts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            tools:targetApi="lollipop">

            <LinearLayout
                style="@style/ALCLinearLayout"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tvChallengeThoughts"
                    style="@style/LargeTextInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/challenge_thoughts"
                    android:transitionName="@string/text_view" />

                <ImageView
                    android:id="@+id/ivArrowChallengeThoughts"
                    style="@style/SharedElementAnimation"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_arrow_drop_down_grey600_36dp"
                    android:transitionName="@string/image_view" />

            </LinearLayout>

            <View
                android:id="@+id/lineChallengeThoughts"
                style="@style/SharedElementAnimation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGray"
                android:transitionName="@string/line" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                style="@style/NormalText"
                android:text="@string/challenge_thoughts_detail_1" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                style="@style/NormalText"
                android:text="@string/challenge_thoughts_detail_2" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                style="@style/NormalText"
                android:text="@string/challenge_thoughts_detail_3" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                style="@style/NormalText"
                android:text="@string/challenge_thoughts_detail_4" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>