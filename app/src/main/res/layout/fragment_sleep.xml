<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.information.guide.lifestyle_change.SleepFragment">

    <LinearLayout
        android:id="@+id/llSleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:targetApi="lollipop"
        android:orientation="vertical">

        <LinearLayout
            style="@style/ALCLinearLayout"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/tvSleep"
                style="@style/LargeTextInfo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/sleep"
                android:transitionName="@string/text_view" />

            <ImageView
                android:id="@+id/ivArrowSleep"
                style="@style/SharedElementAnimation"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_arrow_drop_down_grey600_36dp"
                android:transitionName="@string/image_view" />

        </LinearLayout>

        <View
            android:id="@+id/lineSleep"
            style="@style/SharedElementAnimation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorGray"
            android:transitionName="@string/line" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/NormalText"
                    android:text="@string/sleep_detail"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorLightGray" />

            <LinearLayout
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/NormalText"
                    android:text="@string/click_link_for_more_detail"/>

                <TextView
                    style="@style/NormalText"
                    android:autoLink="web"
                    android:text="@string/sleep_link"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>