<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.information.guide.acceptance_commitment.AcceptanceCommitmentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/NormalText"
            android:layout_margin="@dimen/_10sdp"
            android:text="@string/acceptance_and_commitment_detail" />

        <LinearLayout
            android:id="@+id/llOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:targetApi="lollipop">

            <LinearLayout
                style="@style/ALCLinearLayout"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tvOverview"
                    style="@style/LargeTextInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/overview"
                    android:transitionName="@string/text_view" />

                <ImageView
                    android:id="@+id/ivArrowOverview"
                    style="@style/SharedElementAnimation"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_arrow_drop_down_grey600_36dp"
                    android:transitionName="@string/image_view" />

            </LinearLayout>

            <View
                android:id="@+id/lineOverview"
                style="@style/SharedElementAnimation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGray"
                android:transitionName="@string/line" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llContactPresent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:targetApi="lollipop">

            <LinearLayout
                style="@style/ALCLinearLayout"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tvContactPresent"
                    style="@style/LargeTextInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/contact_with_present"
                    android:transitionName="@string/text_view" />

                <ImageView
                    android:id="@+id/ivArrowContactPresent"
                    style="@style/SharedElementAnimation"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_arrow_drop_down_grey600_36dp"
                    android:transitionName="@string/image_view" />

            </LinearLayout>

            <View
                android:id="@+id/lineContactPresent"
                style="@style/SharedElementAnimation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGray"
                android:transitionName="@string/line" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDefusion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:targetApi="lollipop">

            <LinearLayout
                style="@style/ALCLinearLayout"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tvDefusion"
                    style="@style/LargeTextInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/defusion"
                    android:transitionName="@string/text_view" />

                <ImageView
                    android:id="@+id/ivArrowDefusion"
                    style="@style/SharedElementAnimation"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_arrow_drop_down_grey600_36dp"
                    android:transitionName="@string/image_view" />

            </LinearLayout>

            <View
                android:id="@+id/lineDefusion"
                style="@style/SharedElementAnimation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGray"
                android:transitionName="@string/line" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAcceptance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:targetApi="lollipop">

            <LinearLayout
                style="@style/ALCLinearLayout"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tvAcceptance"
                    style="@style/LargeTextInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/acceptance"
                    android:transitionName="@string/text_view" />

                <ImageView
                    android:id="@+id/ivArrowAcceptance"
                    style="@style/SharedElementAnimation"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_arrow_drop_down_grey600_36dp"
                    android:transitionName="@string/image_view" />

            </LinearLayout>

            <View
                android:id="@+id/lineAcceptance"
                style="@style/SharedElementAnimation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGray"
                android:transitionName="@string/line" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llObservingSelf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:targetApi="lollipop">

            <LinearLayout
                style="@style/ALCLinearLayout"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tvObservingSelf"
                    style="@style/LargeTextInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/observing_the_self"
                    android:transitionName="@string/text_view" />

                <ImageView
                    android:id="@+id/ivArrowObservingSelf"
                    style="@style/SharedElementAnimation"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_arrow_drop_down_grey600_36dp"
                    android:transitionName="@string/image_view" />

            </LinearLayout>

            <View
                android:id="@+id/lineObservingSelf"
                style="@style/SharedElementAnimation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGray"
                android:transitionName="@string/line" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:targetApi="lollipop">

            <LinearLayout
                style="@style/ALCLinearLayout"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tvValues"
                    style="@style/LargeTextInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/values"
                    android:transitionName="@string/text_view" />

                <ImageView
                    android:id="@+id/ivArrowValues"
                    style="@style/SharedElementAnimation"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_arrow_drop_down_grey600_36dp"
                    android:transitionName="@string/image_view" />

            </LinearLayout>

            <View
                android:id="@+id/lineValues"
                style="@style/SharedElementAnimation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGray"
                android:transitionName="@string/line" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCommittedAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:targetApi="lollipop">

            <LinearLayout
                style="@style/ALCLinearLayout"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tvCommittedAction"
                    style="@style/LargeTextInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/committed_action"
                    android:transitionName="@string/text_view" />

                <ImageView
                    android:id="@+id/ivArrowCommittedAction"
                    style="@style/SharedElementAnimation"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_arrow_drop_down_grey600_36dp"
                    android:transitionName="@string/image_view" />

            </LinearLayout>

            <View
                android:id="@+id/lineCommittedAction"
                style="@style/SharedElementAnimation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGray"
                android:transitionName="@string/line" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llResource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:targetApi="lollipop">

            <LinearLayout
                style="@style/ALCLinearLayout"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tvResource"
                    style="@style/LargeTextInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/resource"
                    android:transitionName="@string/text_view" />

                <ImageView
                    android:id="@+id/ivArrowResource"
                    style="@style/SharedElementAnimation"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_arrow_drop_down_grey600_36dp"
                    android:transitionName="@string/image_view" />

            </LinearLayout>

            <View
                android:id="@+id/lineResource"
                style="@style/SharedElementAnimation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGray"
                android:transitionName="@string/line" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>