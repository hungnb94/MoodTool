            <TextView
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/how_to_write_negative_thoughts"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold"
                android:text="@string/cognitive_distortions"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/how_to_write_cognitive_distortions"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold"
                android:text="@string/challenge"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/how_to_write_challenge"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold"
                android:text="@string/alternative_thoughts"
