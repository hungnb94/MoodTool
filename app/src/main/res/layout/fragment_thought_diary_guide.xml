<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.information.guide.cognitive_therapy.ThoughtDiaryGuideFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llThoughtDiary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:targetApi="lollipop"
            android:orientation="vertical">

            <LinearLayout
                style="@style/ALCLinearLayout"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tvThoughtDiary"
                    style="@style/LargeTextInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/thought_diary"
                    android:transitionName="@string/text_view" />

                <ImageView
                    android:id="@+id/ivArrowThoughtDiary"
                    style="@style/SharedElementAnimation"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_arrow_drop_down_grey600_36dp"
                    android:transitionName="@string/image_view" />

            </LinearLayout>

            <View
                android:id="@+id/lineThoughtDiary"
                style="@style/SharedElementAnimation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGray"
                android:transitionName="@string/line" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/thought_diary_guide_detail"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/thought_diary_do"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/thought_diary_do_detail_1"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/thought_diary_do_detail_2"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/when_use_diary"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/when_use_diary_detail"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/how_to_create_entry"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/how_to_create_entry_1"
                style="@style/NormalText" />

            <TextView
                android:text="@string/how_to_create_entry_2"
                style="@style/NormalText" />

            <TextView
                android:text="@string/how_to_create_entry_3"
                style="@style/NormalText" />

            <TextView
                android:text="@string/how_to_create_entry_4"
                style="@style/NormalText" />

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/title"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/how_to_write_title"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold"
                android:text="@string/emotions"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/how_to_write_emotions"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold"
                android:text="@string/distress"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/how_to_write_distress"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold"
                android:text="@string/situation"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/how_to_write_situation"
                style="@style/NormalText" />

            <TextView
