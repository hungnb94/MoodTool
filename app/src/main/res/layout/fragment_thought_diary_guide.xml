                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/cognitive_distortions_ex"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold"
                android:text="@string/challenge"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/challenge_ex"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold"
                android:text="@string/distress"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/ex_distress"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold"
                android:text="@string/alternative_thoughts"
                style="@style/NormalText" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/alternative_thoughts_ex"
                style="@style/NormalText" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>