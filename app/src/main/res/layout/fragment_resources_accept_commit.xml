<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.information.guide.acceptance_commitment.ResourcesAcceptCommitFragment">

    <LinearLayout
        android:id="@+id/llResource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:targetApi="lollipop">

        <LinearLayout
            style="@style/ALCLinearLayout"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/tvResource"
                style="@style/LargeTextInfo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/resource"
                android:transitionName="@string/text_view" />

            <ImageView
                android:id="@+id/ivArrowResource"
                style="@style/SharedElementAnimation"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_arrow_drop_down_grey600_36dp"
                android:transitionName="@string/image_view" />

        </LinearLayout>

        <View
            android:id="@+id/lineResource"
            style="@style/SharedElementAnimation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorGray"
            android:transitionName="@string/line" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLink"
            style="@style/NormalText"
            android:text="@string/resource_link_1"
            android:textColor="@color/colorPinkLink" />

        <TextView
            android:id="@+id/tvLink2"
            style="@style/NormalText"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/resource_link_2"
            android:textColor="@color/colorPinkLink" />

        <!--<TextView-->
        <!--style="@style/NormalText"-->
        <!--android:layout_marginTop="@dimen/_10sdp"-->
        <!--android:autoLink="web"-->
        <!--android:text="@string/resource_link_3"-->
        <!--android:textColor="@color/colorPinkLink" />-->

    </LinearLayout>

</LinearLayout>