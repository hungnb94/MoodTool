<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.information.guide.cognitive_therapy.CognitiveTheoryFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/llCognitiveTherapy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:targetApi="lollipop"
            android:orientation="vertical">

            <LinearLayout
                style="@style/ALCLinearLayout"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    style="@style/LargeTextInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/cognitive_therapy"
                    android:transitionName="@string/text_view" />

                <ImageView
                    style="@style/SharedElementAnimation"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_arrow_drop_down_grey600_36dp"
                    android:transitionName="@string/image_view" />

            </LinearLayout>

            <View
                style="@style/SharedElementAnimation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGray"
                android:transitionName="@string/line" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/NormalText"
                android:text="@string/cognitive_detail_1"/>

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                style="@style/NormalText"
                android:text="@string/cognitive_detail_2"/>

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                style="@style/NormalText"
                android:text="@string/cognitive_detail_3"/>

            <TextView
                android:id="@+id/tvLink"
                android:layout_marginTop="@dimen/_5sdp"
                style="@style/NormalText"
                android:text="@string/cognitive_detail_4"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>